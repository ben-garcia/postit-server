  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.11",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.18.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "apollo-server-express": "^2.19.2",
    "bcrypt": "^5.0.0",
    "class-validator": "^0.13.1",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "typedi": "^0.10.0",
    "typeorm": "^0.2.30"
  },
  "scripts": {
    "start": "nodemon --exec ts-node src/index.ts",
    "test": "jest --watch",
    "test:coverage": "jest --collectCoverage",
    "format": "prettier --write \"./**/*.{ts,json,md}\"",
    "lint": "eslint src/**/*.ts"
  },
  "keywords": [
    "apollo-server",
    "github",
    "graphql",
    "typescript",
    "typeorm"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts}": [
      "eslint --fix",
      "prettier --write",
      "jest ./tests/**/*.test.ts",
      "git add"
    ],
    "**/*.{json,md}": [
      "prettier --write"
    ]
  }
}
